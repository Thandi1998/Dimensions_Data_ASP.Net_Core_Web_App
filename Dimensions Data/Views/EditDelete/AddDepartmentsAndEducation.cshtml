@model Dimensions_Data.Models.DepartmentsAndEducation
@{
    ViewData["Title"] = "AddDepartmentsAndEducation";
}

<h1>Add Departments And Education</h1>
<form method="post">
    
    <div class="border p-3">
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmployeeNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmployeeNumber" class="form-control" />
                        <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Department"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Education"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Education" class="form-control" />
                        <span asp-validation-for="Education" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EducationField"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EducationField" class="form-control" />
                        <span asp-validation-for="EducationField" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmployeeCount"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="EmployeeCount" class="form-control summernote"></textarea>
                        <span asp-validation-for="EmployeeCount" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="JobInvolvement"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="JobInvolvement" class="form-control summernote"></textarea>
                        <span asp-validation-for="JobInvolvement" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="JobLevel"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="JobLevel" class="form-control summernote"></textarea>
                        <span asp-validation-for="JobLevel" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="JobRole"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="JobRole" class="form-control summernote"></textarea>
                        <span asp-validation-for="JobRole" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="JobSatisfaction"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="JobSatisfaction" class="form-control summernote"></textarea>
                        <span asp-validation-for="JobSatisfaction" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                            <input type="submit" class="btn btn-primary w-100" value="Add" />

                        </div>
                        <div class="col">
                            <a asp-action="employeeDepartments" asp-controller="Dashboard" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
