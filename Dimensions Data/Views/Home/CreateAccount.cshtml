@model Dimensions_Data.Models.LoginInformation
@{
    ViewData["Title"] = "CreateAccount";
}

<h1>Create Account</h1>
<div class="container">
    <div>
        <form method="post" asp-action="createAccount">
            <div class="row">
                <label>Employee Number</label>
                <input asp-for="EmployeeNumber" class="form-control" />
            </div>
            <div class="row">
                <label>Employee Name</label>
                <input asp-for="EmployeeName" class="form-control" />
            </div>
            <div class="row">
                <label>Employee Surname</label>
                <input asp-for="EmployeeSurname" class="form-control" />
            </div>
            <div class="row">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="row">
                <label>Job Level</label>
                <input asp-for="JobLevel" class="form-control" />
            </div>
            <div class="row">
                <label>Job Role</label>
                <input asp-for="JobRole" class="form-control" />
            </div>
            <div class="row">
                <label>Password</label>
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <div class="row">
                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password"/>
            </div>
            <div class="row" style="margin-top:15px">
                <input type="submit" class="btn btn-info w-10" value="Create Account" />
            </div>
        </form>

        <div>
            <p>Already Have an Account? <a asp-action="Index">Login</a></p>
        </div>
    </div>

</div>

