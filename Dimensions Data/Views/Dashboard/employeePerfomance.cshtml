@model IEnumerable<Dimensions_Data.Models.PerfomanceAndRate>


    <div class="row justify-content-around">
        <div><h1>Employee Perfomance</h1></div>
        <a asp-action="AddEmployeePerfomance" asp-controller="EditDelete" class="btn btn-info">Add</a>
        <form method="post" asp-action="employeePerfomanceSearch">
            <input asp-route-model hidden />
            <input type="text" id="id" placeholder="Employee Number" />
            <input type="submit" class="btn btn-info w-15" value="search" />
        </form>
    </div>
<div class="container p-3">

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;border:hidden">
            <thead>
                <tr>
                    <th>
                        Employee Number
                    </th>
                    <th>
                        Monthly Income
                    </th>
                    <th>Monthly rate</th>
                    <th>Number Of Companies Worked</th>
                    <th>Overtime</th>
                    <th>Percentage Salary Hike</th>
                    <th>Perfomance Rating</th>
                    <th>Relationship Satisifaction</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.EmployeeNumber</td>
                    <td width="30%">@obj.MonthlyIncome</td>
                    <td width="30%">@obj.MonthlyRate</td>
                    <td width="30%">@obj.NumCompaniesWorked</td>
                    <td width="30%">@obj.OverTime</td>
                    <td width="30%">@obj.PercentSalaryHike</td>
                    <td width="30%">@obj.PerformanceRating</td>
                    <td width="30%">@obj.RelationshipSatisfaction</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="EditDelete" asp-route-Id="@obj.EmployeeNumber" asp-action="EditEmployeePerfomance" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                                Edit
                            </a>
                            <a asp-controller="EditDelete" asp-route-Id="@obj.EmployeeNumber" asp-action="DeleteEmployeePerfomance" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Information.</p>
    }

</div>

