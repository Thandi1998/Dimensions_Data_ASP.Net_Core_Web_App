@model IEnumerable<Dimensions_Data.Models.DepartmentsAndEducation>
@{
    ViewData["Title"] = "employeeDepartments";
}


    <div class="row justify-content-around">
        <div><h1>Departments And Education</h1></div>
        <a asp-action="AddDepartmentsAndEducation" asp-controller="EditDelete" class="btn btn-info">Add</a>
        <form method="post" asp-action="employeeDepartmentsoSearch">
            <input asp-route-model hidden />
            <input type="text" id="id" placeholder="Employee Number" />
            <input type="submit" class="btn btn-info w-15" value="search" />
        </form>
    </div>
<div class="container p-3">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;border:hidden">
            <thead>
                <tr>
                    <th>
                        Employee Number
                    </th>
                    <th>
                        Department
                    </th>
                    <th>Education</th>
                    <th>Education Field</th>
                    <th>Employee Count</th>
                    <th>Job Involevment</th>
                    <th>Job Level</th>
                    <th>Job Role</th>
                    <th>Job Satisfaction</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.EmployeeNumber</td>
                    <td width="30%">@obj.Department</td>
                    <td width="30%">@obj.Education</td>
                    <td width="30%">@obj.EducationField</td>
                    <td width="30%">@obj.EmployeeCount</td>
                    <td width="30%">@obj.JobInvolvement</td>
                    <td width="30%">@obj.JobLevel</td>
                    <td width="30%">@obj.JobRole</td>
                    <td width="30%">@obj.JobSatisfaction</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="EditDelete" asp-route-Id="@obj.EmployeeNumber" asp-action="EditDepartmentsAndEducation" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                                Edit
                            </a>
                            <a asp-controller="EditDelete" asp-route-Id="@obj.EmployeeNumber" asp-action="DeleteDepartmentsAndEducation" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Information.</p>
    }

</div>


