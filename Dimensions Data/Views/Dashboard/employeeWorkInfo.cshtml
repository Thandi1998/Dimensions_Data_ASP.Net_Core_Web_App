@model IEnumerable<Dimensions_Data.Models.EmployeeWorkInfomation>
@{
    ViewData["Title"] = "employeeWorkInfo";
}

<div class="row justify-content-around">
    <div><h1>Employee Work Information</h1></div>
    <a asp-action="AddEmployeeWorkInfo" asp-controller="EditDelete" class="btn btn-info">Add</a>
</div>
<div class="container p-3">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;border:hidden">
            <thead>
                <tr>
                    <th>
                        Employee Number
                    </th>
                    <th>
                        Standard Hours
                    </th>
                    <th>Stock Option level</th>
                    <th>Total Working Years</th>
                    <th>Training Times Last Year</th>
                    <th>Work Life Balance</th>
                    <th>Years At Company</th>
                    <th>Years in The Current Role</th>
                    <th>Years Since Last Promotion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.EmployeeNumber</td>
                        <td width="30%">@obj.StandardHours</td>
                        <td width="30%">@obj.StockOptionLevel</td>
                        <td width="30%">@obj.TotalWorkingYears</td>
                        <td width="30%">@obj.TrainingTimesLastYear</td>
                        <td width="30%">@obj.WorkLifeBalance</td>
                        <td width="30%">@obj.YearsAtCompany</td>
                        <td width="30%">@obj.YearsInCurrentRole</td>
                        <td width="30%">@obj.YearsSinceLastPromotion</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="EditDelete" asp-route-Id="@obj.EmployeeNumber" asp-action="EditEmployeeWorkInfo" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                    Edit
                                </a>
                                <a asp-controller="EditDelete" asp-route-Id="@obj.EmployeeNumber" asp-action="DeleteEmployeeWorkInfo" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Information.</p>
    }

</div>


