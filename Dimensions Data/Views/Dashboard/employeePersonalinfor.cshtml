@model IEnumerable<Dimensions_Data.Models.EmployeePersonal>
@{
    ViewData["Title"] = "employeePersonalinfo";
}

<div class="row justify-content-around">
    <div><h1>Employee Personal Information</h1></div>
    <a asp-action="AddEmployeePersonalInfo" asp-controller="EditDelete" class="btn btn-info">Add</a>
</div>
<div class="container p-3">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;border:hidden">
            <thead>
                <tr>
                    <th>
                        Employee Number
                    </th>
                    <th>
                        Age
                    </th>
                    <th>Gender</th>
                    <th>Marital Status</th>
                    <th>Over 18</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.EmployeeNumber</td>
                        <td width="30%">@obj.Age</td>
                        <td width="30%">@obj.Gender</td>
                        <td width="30%">@obj.MaritalStatus</td>
                        <td width="30%">@obj.Over18</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="EditDelete" asp-route-Id="@obj.EmployeeNumber" asp-action="EditEmployeePersonalInfo" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                    Edit
                                </a>
                                <a asp-controller="EditDelete" asp-route-Id="@obj.EmployeeNumber" asp-action="DeleteEmployeePersonalInfo" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Information.</p>
    }

</div>

